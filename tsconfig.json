{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "jsx.fragment",
    "types": ["vitest/globals"],
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@lib/*": ["./lib/*"],
      "@support/*": ["./test/support/*"]
    }
  },
  "include": ["lib/**/*", "test/**/*", "lib/jsx.d.ts"],
  "exclude": ["node_modules", "dist", "cypress"]
}
